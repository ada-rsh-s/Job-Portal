  "main": "index.js",
  "type": "module",
"scripts": {
  "build-client": "cd client && pnpm run build",
  "install-client": "cd client && pnpm install",
  "postbuild": "pnpm install && pnpm run install-client && pnpm run build-client",
  "server": "nodemon server --ignore client",
  "client": "cd client && pnpm start",
  "keepawake": "node keep-awake.js",
  "start": "concurrently --kill-others-on-fail \"pnpm run server\" \"pnpm run client\" \"pnpm run keepawake\""
},

